{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es2015"],
    "sourceMap": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "outDir": ".build",
    "rootDir": "./src",
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
