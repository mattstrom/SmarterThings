{
  "name": "@mattstrom/smarterthings-api",
  "version": "1.0.0",
  "description": "description",
  "author": "Matt Strom [support@mattstrom.com]",
  "license": "MIT",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.build.json",
    "start:prod": "node --experimental-repl-await dist/main.js",
    "start:hmr": "node dist/server",
    "repl": "rlwrap telnet localhost 5001",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker": "npm-run-all docker:*",
    "docker:build": "docker build -t smarterthings_api --build-arg NODE_ENV=production .",
    "docker:tag": "docker tag smarterthings_api registry.mattstrom.com/smarterthings_api",
    "docker:push": "docker push registry.mattstrom.com/smarterthings_api",
    "webpack": "webpack --config webpack.config.ts"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.2.0",
    "@nestjs/common": "^6.10.13",
    "@nestjs/core": "^6.10.13",
    "@nestjs/microservices": "^6.10.13",
    "@nestjs/passport": "^6.1.1",
    "@nestjs/platform-express": "^6.10.13",
    "@nestjs/platform-socket.io": "^6.10.13",
    "@nestjs/typeorm": "^6.2.0",
    "@nestjs/websockets": "^6.10.13",
    "app-root-path": "^2.2.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.0",
    "config": "^3.2.2",
    "convict": "^6.2.3",
    "cookie-parser": "^1.4.4",
    "helmet": "^3.21.0",
    "http-signature": "^1.2.0",
    "http-status-codes": "^1.3.2",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "response-time": "^2.3.2",
    "rxjs": "^6.5.3",
    "simple-oauth2": "^2.4.0",
    "ts-node": "^8.3.0",
    "typeorm": "^0.2.19",
    "typeorm-sqljs": "^1.2.2",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.12.9",
    "@nestjs/testing": "^6.10.13",
    "@types/app-root-path": "^1.2.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "^0.0.34",
    "@types/convict": "^4.2.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.1",
    "@types/helmet": "^0.0.44",
    "@types/jest": "^24.0.18",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.7.5",
    "@types/passport": "^1.0.1",
    "@types/passport-jwt": "^3.0.2",
    "@types/request": "^2.48.3",
    "@types/response-time": "^2.3.4",
    "@types/simple-oauth2": "^2.2.1",
    "@types/socket.io": "^2.1.2",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.5",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.8",
    "webpack-node-externals": "^1.7.2"
  },
  "_moduleAliases": {
    "~": "./dist"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
