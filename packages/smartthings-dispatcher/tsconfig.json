{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist",
	"declaration": false,
	"mapRoot": "dist",
	"module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
	"experimentalDecorators": true,
	"skipLibCheck": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "exclude": [
	  "dist",
	  "node_modules"
  ]
}
