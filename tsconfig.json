{
	"compileOnSave": false,
	"compilerOptions": {
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
		"target": "es5",
    "baseUrl": ".",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2016",
			"dom"
		],
    "paths": {
      "~/configuration": ["./packages/api/src/configuration"],
      "*": [
        "*"
      ]
    }
  }
}
